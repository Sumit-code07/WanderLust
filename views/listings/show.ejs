<% layout("/layouts/boilerplate") %>
    <script>
        const listing= <%-JSON.stringify(listing)%>
    </script>
    <div class="row mt-3">
        <div class="col-md-8 offset-sm-2">
        <h1><%=listing.title%></h1>
        </div>
        <div class="card col-md-7 offset-sm-2 listing-card">
            <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="hotel-Img">
            <div class="card-body">
                <p class="card-text"><i>owner: <%=listing.owner.username%></i></p>
                <p class="card-text"><%=listing.description%></p>
                <p class="card-text">&#8377; <%=listing.price.toLocaleString("en-IN")%></p>
                <p class="card-text"><%=listing.location%></p>
                <p class="card-text"><%=listing.country%></p>
            </div>
        </div>
    </div>
    
    <%if(currUser && listing.owner._id.equals(currUser._id)){%>
    <div class="btn offset-2" style="display: flex;">
        <form method="GET" action="/listing/<%=listing._id%>/edit">
            <button class="btn btn-dark edit-btn">Edit Details</button>
        </form>
        <form method="POST" action="/listing/<%=listing._id%>?_method=DELETE" style="margin-left:20px;">
            <button class="btn btn-dark">Delete</button>
        </form>
    </div>
    <%}%>
    <hr>

    <!-- Review -->
    <div class="col-md-8 offset-sm-2 mb-3">
        <h3>Leave a Review</h3>
        <form action="/listing/<%=listing._id%>/reviews" method="POST" class="needs-validation" novalidate>
            <fieldset class="starability-slot">
                <legend>Rate:</legend>
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset><br>
            <label for="comment" class="form-label">comment</label><br>
            <textarea  id="comment" type="range" name="review[comment]" rows="5" cols="30" class="form-control mb-0" required></textarea><br>
            <div class="invalid-feedback mt-0">Please enter some review in comment</div>
            <%if(!currUser){%>
                <p><b>Please login before giving review</b></p>
            <%}%>
            <%if(currUser){%>
            <button class="btn btn-outline-dark">Submit</button>
            <%}%>
        </form>

        <hr>
        
        <%if(listing.reviews.length>0){%>
        <p><b>All Reviews</b></p>
        <div class="row">
            <% for(let review of listing.reviews){%>
                <div class="col-6">
                <div class="card mb-3">
                    <div class="card-body ms-2" style="height: 165px;">
                        <h5 class="card-title"><%=review.author.username%></h5>
                        <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
                        <p class="card-text"><%=review.comment%></p>
                        <%if(currUser&&currUser._id.equals(review.author._id)){%>
                        <form method="POST" action="/listing/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                            <button class="btn btn-sm btn-dark mb-3">Delete</button>
                        </form>
                        <%}%>
                    </div>
                </div>
                </div>
            <%}%>
        </div>
        <hr>
        <%}%>
    </div>
    <div class="col-md-8 offset-sm-2 mb-3">
        <h3 >Where youw'll be</h3>
        <div  id="map" style="height: 300px;"></div>
    </div>
    
    <script src="/js/map.js"></script>